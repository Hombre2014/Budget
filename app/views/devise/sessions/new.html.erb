<div class="container-full">
  <div class="header-block">
    <%= link_to image_tag('arrow_left.png'), root_path, { 'class': 'arrow'} %>
    <span class="main-title">LOG IN</span>
    <span class="right-text">Next</span>
  </div>
  
  <div class="signup-body">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: 'input-field' %>
      </div>

      <div class="field">
        <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class: 'input-field' %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field check-box">
          <%= f.check_box :remember_me%>
          <%= f.label :remember_me %>
        </div>
      <% end %>
  </div>

    <div class="actions">
      <%= f.submit "LOG IN", class: 'btn-submit' %>
    </div>
    <% end %>

    <%= render "devise/shared/links" %>

</div>
